---
import info from '../assets/icons/info.svg?raw';
import danger from '../assets/icons/octagon-alert.svg?raw';
import warning from '../assets/icons/triangle-alert.svg?raw';
import confirm from '../assets/icons/circle-check.svg?raw';

const { title, type, extraClass } = Astro.props;

let svgIcon;
switch (type) {
  case 'danger':
    svgIcon = danger;
    break;
  case 'warning':
    svgIcon = warning;
    break;
  case 'confirm':
    svgIcon = confirm;
    break;
  default:
    svgIcon = info;
}
---

<aside class={`notice notice-${type}${extraClass ? ` ${extraClass}` : ''}`}>
  {
    title && (
      <div class="notice_title">
        <Fragment set:html={svgIcon} />
        <strong>{title}</strong>
      </div>
    )
  }
  <slot />
</aside>
