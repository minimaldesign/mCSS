---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.split('/')[1]; // pathname starts with '/'
const sections = ['Docs', 'About', 'Blog', 'Tags'];
---

<nav>
  <ul>
    <li>
      <a class={'' == currentPath && 'is-active'} href="/">Home</a>
    </li>
    {
      sections.map((currentSection) => {
        const path = currentSection.toLowerCase();
        return (
          <li>
            <a class={path == currentPath && 'is-active'} href={`/${path}/`}>
              {currentSection}
            </a>
          </li>
        );
      })
    }
  </ul>
  <script></script>
</nav>
