---
import ThemeToggle from './ThemeToggle.astro';

import { getCollection } from 'astro:content';

import menuIcon from '../assets/icons/menu.svg?raw';
import closeIcon from '../assets/icons/x.svg?raw';

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.split('/')[1]; // pathname starts with '/'

const componentList = await getCollection('components');
import { moveToFirstPosition } from '../scripts/utilities';
const orderedPosts = moveToFirstPosition(componentList, 'id', 'start');

const navItems = [
  {
    id: '',
    top: true,
    data: {
      title: 'Home',
    },
    subsection: [],
  },
  {
    id: 'docs',
    data: {
      title: 'Docs',
    },
    subsection: [
      {
        id: 'start',
        data: {
          title: 'Getting Started',
        },
      },
      {
        id: 'tokens',
        data: {
          title: 'Tokens',
        },
      },
      {
        id: 'media-queries',
        data: {
          title: 'Media Queries',
        },
      },
      {
        id: 'themes',
        data: {
          title: 'Themes',
        },
      },
      {
        id: 'reset',
        data: {
          title: 'Reset',
        },
      },
      {
        id: 'elements',
        data: {
          title: 'HTML Elements',
        },
      },
      {
        id: 'global',
        data: {
          title: 'Global Styles',
        },
      },
      {
        id: 'helpers',
        data: {
          title: 'Helpers',
        },
      },
    ],
  },
  {
    id: 'components',
    data: {
      title: 'Components',
    },
    subsection: orderedPosts,
  },
  {
    id: 'blog',
    top: true,
    data: {
      title: 'Blog',
    },
  },
];
---

<nav class="header_navMobile" role="navigation" aria-label="Main menu">
  <button aria-expanded="false">
    <Fragment set:html={menuIcon} />
  </button>
  <div>
    <div class="header_navMobile_themeToggle">
      <ThemeToggle />
    </div>
    <button>
      <Fragment set:html={closeIcon} />
    </button>
    <ul>
      {
        navItems.map((item) => (
          <li>
            <a class={item.id == currentPath && 'is-active'} href={`/${item.id}${item.top ? '' : '/start'}`}>
              {item.data.title}
            </a>
            {item.subsection && (
              <ul>
                {item.subsection.map((sub) => (
                  <li>
                    <a class={sub.id == currentPath && 'is-active'} href={`/${item.id}/${sub.id}`}>
                      {sub.data.title}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<script is:inline>
  const button = document.querySelector('.header_navMobile > button');
  const menu = document.querySelector('.header_navMobile > div');
  const closeButton = document.querySelector('.header_navMobile > div button');

  const handleToggleNav = () => {
    menu.classList.toggle('is-open');
    menu.classList.toggle('body-is-locked');
  };

  button.addEventListener('click', handleToggleNav);
  closeButton.addEventListener('click', handleToggleNav);
</script>
